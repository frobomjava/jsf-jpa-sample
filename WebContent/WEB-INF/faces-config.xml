<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    
    <managed-bean>
		<managed-bean-name>LoginMB2</managed-bean-name>
		<managed-bean-class>com.mrbool.managedbeans2.LoginManagedBean2</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{LoginMB2.checkValidUser}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/loginsuccess.xhtml</to-view-id>
			<redirect />
		</navigation-case>				
		
		
	</navigation-rule>

</faces-config>
